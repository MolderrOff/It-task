@model List<Itmytask.Domain.Entity.Users>

@{
    ViewData["Title"] = "Пользователи";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<p>Страница Users</p>
<p><a asp-action="Index">Вернуться на стартовую</a></p>

@{
    <table frame="void" rules="cols">
        <tr>
            <th width="100" height="15">
                Id
            </th>

            <th width="100" height="15">

                Name

            </th>

            <th width="150" height="15">

                email

            </th>

            <th width="150" height="15">

                password

            </th>
            <th width="150" height="15">

                phone

            </th>
            <th width="150" height="15">

                city

            </th>

        </tr>
    </table>
}
@foreach (var user in Model)
{
    <style>

        table {
            border: 1px solid grey;
            border-collapse: collapse;
        }
    </style>

    <table frame="void" rules="cols">

        <tr>
            <td width="100" height="15">
                @user.Id
            </td>
            <td width="100" height="15">
                @user.Name
            </td>
            <td width="150" height="15">
                @user.email
            </td>
            <td width="150" height="15">
                @user.password
            </td>
            <td width="150" height="15">
                @user.phone
            </td>
            <td width="150" height="15">
                @user.city
            </td>


    </table>
}